<h2>New Bid</h2>

<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{input value=name id="name" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="bid_amount">Bid Amount</label>
    {{input value=bid_amount id="bid_amount" class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Add your bid</button>
</form>
